         <td colspan="3" style="width:115px"><apex:image value="{!URLFOR($RESOURCE.GraphicsPack,'16/fatcow/farmfresh/' + 
                     IF(Account.Etat_du_compte_FI__c == $label.client_actif,'small_business',
                         IF(Account.Etat_du_compte_FI__c == $label.client_inactif,'thumb_down',
                         'headphone_mic')) 
                     +'.png')}" title="PF: {!Account.Etat_du_compte_FI__c}"/>
         </td>
         
         <td colspan="3" style="width:115px;border-right-width:0"><apex:image value="{!URLFOR($RESOURCE.GraphicsPack,'16/fatcow/farmfresh/' + 
                     IF(Account.Etat_du_compte_CIN__c == $label.client_actif,'small_business',
