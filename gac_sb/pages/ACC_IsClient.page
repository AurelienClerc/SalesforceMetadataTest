<apex:page standardController="Account" showHeader="False" sidebar="false">
  <apex:variable value="{!$Setup.V2Params__c.CIN_Enabled__c}" var="CIN_enabled" />
  <style type="text/css">
      td,th {border:1px solid #bbb; text-align:center;
          border-width:0 1px 0 0;
      }
  </style>
  <div style="text-align:center;">
 <table cellspacing="0" cellpadding="4" style="display:inline-block;border:1px solid #bbb;-webkit-border-radius: 5px;-moz-border-radius: 5px;border-radius: 5px;">


     <tr>
         <th colspan="{!IF(CIN_enabled , 4 , 3)}" style="text-align:center;vertical-align:middle;border-width:0 0 1px 0">{!$Label.Etat_global} : </th>
         <th colspan="2" style="text-align:center;border-width:0 0 1px 0" >
         <apex:image value="{!URLFOR($RESOURCE.GraphicsPack,'32/fatcow/farmfresh/' + 
                     IF(Account.Etat_du_compte__c == $Label.Client_actif,'small_business',
                         IF(Account.Etat_du_compte__c == $Label.Client_inactif,'thumb_down',
                         'headphone_mic')) 
                     +'.png')}"/> 
         </th>
         <th colspan="4" style="text-align:center;border-width:0 0 1px 0" >
          ({!Account.Etat_du_compte__c})
         </th>
</tr>
     
     <apex:outputPanel rendered="{!Account.RecordType.developerName == 'FRANCE_ACCOUNT'}" layout="none">
     
     <tr>
         
         <th style="width:32px">CIR</th>
         <th style="width:32px">AS</th>
         <apex:outputPanel rendered="{!CIN_enabled}" layout="none"><th style="width:32px">CIN</th></apex:outputPanel> 
         <th style="width:32px">TAT</th>
         <th style="width:32px">ACS</th>
         <th style="width:32px">CRH</th>
         <th style="width:32px">IL</th>
         
         
        
         <th style="width:32px;">CFI</th>
         <th style="width:32px;border-right-width:0">DI</th>
         
     </tr>
     <tr>
         <td style=""><apex:image value="{!URLFOR($RESOURCE.GraphicsPack,'16/fatcow/farmfresh/' + 
                     IF(Account.Etat_du_compte_CIR__c == $label.client_actif,'small_business',
                         IF(Account.Etat_du_compte_CIR__c == $label.client_inactif,'thumb_down',
                         'headphone_mic')) 
                     +'.png')}" title="CIR: {!Account.Etat_du_compte_CIR__c}"/>
         </td>
          <td><apex:image value="{!URLFOR($RESOURCE.GraphicsPack,'16/fatcow/farmfresh/' + 
                     IF(Account.Etat_du_compte_FI__c == $label.client_actif,'small_business',
                         IF(Account.Etat_du_compte_FI__c == $label.client_inactif,'thumb_down',
                         'headphone_mic')) 
                     +'.png')}" title="AS: {!Account.Etat_du_compte_FI__c}"/></td>
        <apex:outputPanel rendered="{!CIN_enabled}" layout="none">
        <td><apex:image value="{!URLFOR($RESOURCE.GraphicsPack,'16/fatcow/farmfresh/' + 
                     IF(Account.Etat_du_compte_CIN__c == $label.client_actif,'small_business',
                         IF(Account.Etat_du_compte_CIN__c == $label.client_inactif,'thumb_down',
                         'headphone_mic')) 
                     +'.png')}" title="CIN: {!Account.Etat_du_compte_CIN__c}"/></td>
        </apex:outputPanel>
                 <td><apex:image value="{!URLFOR($RESOURCE.GraphicsPack,'16/fatcow/farmfresh/' + 
                     IF(Account.Etat_du_compte_TAT__c == $label.client_actif,'small_business',
                         IF(Account.Etat_du_compte_TAT__c == $label.client_inactif,'thumb_down',
                         'headphone_mic')) 
                     +'.png')}" title="TAT: {!Account.Etat_du_compte_TAT__c}"/>
         </td>
         <td><apex:image value="{!URLFOR($RESOURCE.GraphicsPack,'16/fatcow/farmfresh/' + 
                     IF(Account.Etat_du_compte_ACS__c == $label.client_actif,'small_business',
                         IF(Account.Etat_du_compte_ACS__c == $label.client_inactif,'thumb_down',
                         'headphone_mic')) 
                     +'.png')}" title="ACS: {!Account.Etat_du_compte_ACS__c}"/>
         </td>
         <td><apex:image value="{!URLFOR($RESOURCE.GraphicsPack,'16/fatcow/farmfresh/' + 
                     IF(Account.Etat_du_compte_CRH__c == $label.client_actif,'small_business',
                         IF(Account.Etat_du_compte_CRH__c == $label.client_inactif,'thumb_down',
                         'headphone_mic')) 
                     +'.png')}" title="CRH: {!Account.Etat_du_compte_CRH__c}"/>
         </td>
         <td><apex:image value="{!URLFOR($RESOURCE.GraphicsPack,'16/fatcow/farmfresh/' + 
                     IF(Account.Etat_du_compte_IL__c == $label.client_actif,'small_business',
                         IF(Account.Etat_du_compte_IL__c == $label.client_inactif,'thumb_down',
                         'headphone_mic')) 
                     +'.png')}" title="IL: {!Account.Etat_du_compte_IL__c}"/></td>

         <td style=""><apex:image value="{!URLFOR($RESOURCE.GraphicsPack,'16/fatcow/farmfresh/' + 
             IF(Account.Etat_du_compte_CFI__c== $label.client_actif,'small_business',
                 IF(Account.Etat_du_compte_CFI__c== $label.client_inactif,'thumb_down',
                 'headphone_mic')) 
             +'.png')}" title="CFI: {!Account.Etat_du_compte_CFI__c}"/></td>
                     
        
         <td style="border-right-width:0"><apex:image value="{!URLFOR($RESOURCE.GraphicsPack,'16/fatcow/farmfresh/' + 
                     IF(Account.Etat_du_compte_DI__c == $label.client_actif,'small_business',
                         IF(Account.Etat_du_compte_DI__c == $label.client_inactif,'thumb_down',
                         'headphone_mic')) 
                     +'.png')}" title="DI: {!Account.Etat_du_compte_DI__c}"/></td>

     </tr>
     
     </apex:outputPanel>
     
     <apex:outputPanel rendered="{!Account.RecordType.developerName == 'SPAIN_ACCOUNT'}" layout="none">
     
     <tr>
         
         <th colspan="3" style="width:115px">R&amp;D Tax Credit</th>
         
         <th colspan="3" style="width:115px">R&amp;D Funding</th>
         
         <th colspan="3" style="width:115px;border-right-width:0">Consulting</th>
         
     </tr>
     <tr>
         <td colspan="3" style="width:115px"><apex:image value="{!URLFOR($RESOURCE.GraphicsPack,'16/fatcow/farmfresh/' + 
                     IF(Account.Etat_du_compte_CIR__c == $label.client_actif,'small_business',
                         IF(Account.Etat_du_compte_CIR__c == $label.client_inactif,'thumb_down',
                         'headphone_mic')) 
                     +'.png')}" title="R&amp;D Tax Credit: {!Account.Etat_du_compte_CIR__c}"/>
