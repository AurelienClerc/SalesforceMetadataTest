<apex:page Controller="FactuSelectPlanificationsCtrl" tabStyle="Facture__c"> 
	
	<apex:sectionHeader subtitle="{!$ObjectType.Mission__c.Label} {!mission.Name}" title="{!$Label.Factu_CreateFacture}"/>
	
	<apex:pageMessages />
	
	<apex:form rendered="{!!ISNULL(lsSelectOptionPlanifications) && lsSelectOptionPlanifications.size > 0}">
	    <apex:pageBlock >
	        <apex:pageBlockSection showHeader="true" title="{!$Label.Factu_SelectPlanifications}" columns="1"> 
	            <apex:selectCheckboxes value="{!selectedPlanifications}" layout="pageDirection">
	                <apex:selectOptions value="{!lsSelectOptionPlanifications}"/><br />
	            </apex:selectCheckboxes>
	        </apex:pageBlockSection>

	        <apex:pageBlockButtons >
	        	<apex:commandButton value="{!$Label.Factu_Next}" action="{!CreateFactu}"/>
	        	<apex:commandButton value="{!$Label.Factu_Cancel}" action="{!URLFOR('/'+mission.Id)}"/>
	        </apex:pageBlockButtons>
	    </apex:pageBlock>
	</apex:form>

</apex:page>